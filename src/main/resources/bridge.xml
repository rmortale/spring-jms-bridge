    <bean init-method="start" id="bridge3" class="org.apache.activemq.artemis.jms.bridge.impl.JMSBridgeImpl">
        <property name="sourceConnectionFactoryFactory" ref="mqFactoryFactory"/>
        <property name="sourceDestinationFactory" ref="fromMq02"/>
        <property name="targetConnectionFactoryFactory" ref="artemisFactoryFactory"/>
        <property name="targetDestinationFactory" ref="toArt01"/>
        <property name="failureRetryInterval" value="5000"/>
        <property name="maxBatchSize" value="100"/>
        <property name="maxBatchTime" value="5000"/>
        <property name="maxRetries" value="-1"/>
        <property name="qualityOfServiceMode" value="DUPLICATES_OK"/>
    </bean>
</beans>