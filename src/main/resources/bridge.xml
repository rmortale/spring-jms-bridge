<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mqFactoryFactory" class="ch.dulce.springjmsbridge.factory.MQFactoryFactory">
        <property name="host" value="oravm05"/>
        <property name="port" value="1414"/>
        <property name="channel" value="DEV.APP.SVRCONN"/>
        <property name="queueManager" value="QM1"/>
        <property name="username" value="app"/>
        <property name="password" value="passw0rd"/>
    </bean>

    <bean id="to01" class="ch.dulce.springjmsbridge.factory.MQDestinationFactory">
        <property name="destinationName" value="DEV.QUEUE.1"/>
    </bean>
    <bean id="fromMq02" class="ch.dulce.springjmsbridge.factory.MQDestinationFactory">
        <property name="destinationName" value="DEV.QUEUE.2"/>
    </bean>

    <bean id="artemisFactoryFactory" class="ch.dulce.springjmsbridge.factory.ArtemisFactoryFactory">
        <property name="brokerUrl" value="tcp://oravm05:61616"/>
        <property name="username" value="artemis"/>
        <property name="password" value="artemis"/>
    </bean>

    <bean id="from02" class="ch.dulce.springjmsbridge.factory.ArtemisDestinationFactory">
        <property name="destinationName" value="from.queue.02"/>
    </bean>
    <bean id="from01" class="ch.dulce.springjmsbridge.factory.ArtemisDestinationFactory">
        <property name="destinationName" value="from.queue.01"/>
    </bean>
    <bean id="toArt01" class="ch.dulce.springjmsbridge.factory.ArtemisDestinationFactory">
        <property name="destinationName" value="to.queue.01"/>
    </bean>

