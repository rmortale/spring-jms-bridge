<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mqFactoryFactory" class="ch.dulce.springjmsbridge.factory.MQFactoryFactory" autowire="byType">
        <property name="host" value="localhost"/>
        <property name="port" value="1415"/>
        <property name="channel" value="DEV.APP.SVRCONN"/>
        <property name="queueManager" value="QM1"/>
        <property name="username" value="app"/>
        <property name="password" value="passw0rd"/>
        <property name="sslCipherSuite" value="*TLS13"/>
        <property name="sslBundleName" value="mqssl"/> <!-- SSL bundle defined in application.yaml named mssql-->
    </bean>

    <bean id="to01" class="ch.dulce.springjmsbridge.factory.MQDestinationFactory">
        <property name="destinationName" value="DEV.QUEUE.1"/>
    </bean>


    <bean id="artemisFactoryFactory" class="ch.dulce.springjmsbridge.factory.ArtemisFactoryFactory">
        <property name="brokerUrl" value="tcp://oravm05:61616"/>
        <property name="username" value="artemis"/>
        <property name="password" value="artemis"/>
    </bean>

    <bean id="from02" class="ch.dulce.springjmsbridge.factory.ArtemisDestinationFactory">
        <property name="destinationName" value="from.queue.02"/>
    </bean>
    <bean id="from01" class="ch.dulce.springjmsbridge.factory.ArtemisDestinationFactory">
        <property name="destinationName" value="from.queue.01"/>
    </bean>


    <bean init-method="start" id="bridge3" class="org.apache.activemq.artemis.jms.bridge.impl.JMSBridgeImpl">
        <property name="sourceConnectionFactoryFactory" ref="mqFactoryFactory"/>
        <property name="sourceDestinationFactory">
            <bean class="ch.dulce.springjmsbridge.factory.MQDestinationFactory">
                <property name="destinationName" value="DEV.QUEUE.2"/>
            </bean>
        </property>
        <property name="targetConnectionFactoryFactory" ref="artemisFactoryFactory"/>
        <property name="targetDestinationFactory">
            <bean class="ch.dulce.springjmsbridge.factory.ArtemisDestinationFactory">
                <property name="destinationName" value="to.queue.01"/>
            </bean>
        </property>
        <property name="failureRetryInterval" value="5000"/>
        <property name="maxBatchSize" value="100"/>
        <property name="maxBatchTime" value="5000"/>
        <property name="maxRetries" value="-1"/>
        <property name="qualityOfServiceMode" value="DUPLICATES_OK"/>
    </bean>
</beans>